#!/usr/bin/env python
from pathlib import Path

from notion_to_md.cli import parse_args


def main(dirpath: Path) -> None:
    for path in dirpath.iterdir():
        if path.suffix == '.md':
            process_filepath(path)
        elif path.is_dir():
            main(path)


if __name__ == '__main__':
    args = parse_args()
    dirpath = args.path

    from notion_to_md.work_with_file.process_ import process_filepath

    main(Path(dirpath))
